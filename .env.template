# Financial Audit Agentic System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Financial Audit Agentic System"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# DuckDB Configuration (Analytical Database)
DUCKDB_PATH=./audit_data.duckdb
DUCKDB_MEMORY_LIMIT=2GB
DUCKDB_THREADS=4

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1
REDIS_SESSION_URL=redis://localhost:6379/2

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================

# Groq API (Primary LLM Provider)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL_MAIN=openai/gpt-oss-120b
GROQ_MODEL_SECURITY=meta-llama/llama-guard-4-12b
GROQ_MAX_TOKENS=4000
GROQ_TEMPERATURE=0.1

# GuardRails AI Security
GUARDRAILS_API_KEY=your-guardrails-api-key-here

# LangGraph
LANGGRAPH_API_KEY=your-langgraph-api-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# OPENTELEMETRY CONFIGURATION
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=financial-audit-backend
OTEL_RESOURCE_ATTRIBUTES=service.name=financial-audit,service.version=1.0.0,deployment.environment=development

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=financial-audit-data
MINIO_SECURE=false

# Vault Secrets Management
VAULT_URL=http://localhost:8200
VAULT_TOKEN=myroot

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Prometheus
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Log Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development tools
ENABLE_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/financial_audit_test

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================

# Data Retention Policies (in days)
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for SOX compliance
FINANCIAL_DATA_RETENTION_DAYS=2555
SYSTEM_LOG_RETENTION_DAYS=365

# Compliance Frameworks
ENABLE_SOX_COMPLIANCE=true
ENABLE_GAAP_COMPLIANCE=true
ENABLE_GDPR_COMPLIANCE=true

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Model Training
ML_MODEL_CACHE_DIR=./models/cache
ML_TRAINING_DATA_DIR=./data/training
ML_ENABLE_GPU=false
ML_BATCH_SIZE=32
ML_LEARNING_RATE=0.001

# Fraud Detection
FRAUD_DETECTION_THRESHOLD=0.7
FRAUD_DETECTION_MODEL_PATH=./models/fraud_detection_model.zip

# Anomaly Detection
ANOMALY_DETECTION_CONTAMINATION=0.1
ANOMALY_DETECTION_MODEL_PATH=./models/anomaly_detection_model.joblib

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=financial-audit
POSTGRES_DB=financial_audit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# API Performance
MAX_UPLOAD_SIZE=50MB
REQUEST_TIMEOUT=300
WORKERS_COUNT=4

# Database Performance
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600

# Cache Performance
CACHE_DEFAULT_TIMEOUT=300
CACHE_MAX_ENTRIES=10000

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# QuickBooks Integration (optional)
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret

# SAP Integration (optional)
SAP_ENDPOINT=your-sap-endpoint
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password

# Bank API Integration (optional)
BANK_API_KEY=your-bank-api-key
BANK_API_ENDPOINT=https://api.bank.com

# =============================================================================
# GUARDRAILS CONFIGURATION
# =============================================================================

# Security GuardRails
ENABLE_DATA_CLASSIFICATION=true
ENABLE_PII_DETECTION=true
ENABLE_INPUT_VALIDATION=true
ENABLE_ACCESS_CONTROL=true

# GuardRails AI
GUARDRAILS_API_KEY=your-guardrails-api-key

